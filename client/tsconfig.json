{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "src/.advisor",
        "node_modules",
        "build",
        "public",
        "static",
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "dom",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2019",
            "ES2020",
            "ES2021",
        ],
        "jsx": "react",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "isolatedModules": true,
        "noEmit": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
