{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "src/.advisor",
        "node_modules",
        ".cache",
        ".parcel-cache",
        "dist",
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "dom",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2019"
        ],
        "jsx": "react",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    }
}
