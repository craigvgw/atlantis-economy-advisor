{
  "name": "client",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/index.html --no-source-maps",
    "build:debug": "parcel build src/index.html",
    "start": "node proxy.js",
    "codegen": "graphql-codegen --config codegen.yaml",
    "terrain:advisor": "spritesheet-js -n terrain-advisor -p assets -f pixi.js src/assets/terrain/advisor/*.png",
    "terrain:fantasy": "spritesheet-js -n terrain-fantasy -p assets -f pixi.js src/assets/terrain/fantasy/*.png",
    "assets": "yarn run terrain:advisor && yarn run terrain:fantasy"
  },
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.11.2",
    "@types/react": "^16.8.6 || ^17.0.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "graphql-tag": "^2.11.0",
    "lodash.throttle": "^4.1.1",
    "mobx": "^6.1.7",
    "mobx-react-lite": "^3.2.0",
    "pixi.js": "^5.3.8",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@graphql-cli/codegen": "^1.17.8",
    "@graphql-cli/generate": "^4.0.0",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/schema-ast": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-document-nodes": "^1.17.8",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.6",
    "graphql": "15.5.0",
    "graphql-cli": "^4.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "spritesheet-js": "^1.2.6",
    "typescript": "^4.0.2"
  },
  "resolutions": {
    "graphql": "15.5.0"
  },
