{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/server/advisor.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBuildCommand": true,
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/server/advisor.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBuildCommand": true,
            "group": {
                "isDefault": false,
                "kind": "build"
            }
        },
        {
            "label": "Server: Run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/server",
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ADVISOR_SEED__EMAIL": "admin@advisor",
                    "ADVISOR_SEED__PASSWORD": "admin123"
                }
            }
        },
        {
            "label": "Client: Run",
            "command": "yarn",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Server: Run",
                "Client: Run"
            ],
            "problemMatcher": []
        }
    ]
}
